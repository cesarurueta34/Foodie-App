<header>
    <h1>Edit a Place!</h1>
</header>

<form action="/{{data.id}}?_method=put" method="POST">
  <div class="color" class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" value="{{data.name}}" class="form-control" />

    <label for="price">Price:</label>
    <input type="text" name="price" value="{{data.price}}" class="form-control" />


    <label for="phone">Phone:</label>
    <input type="text" name="phone" value="{{data.phone}}" class="form-control" />


    <label for="address">Address:</label>
    <input type="text" name="address" value="{{data.address}}" class="form-control" />



    {{#unless data.visited}}
    <label for="visited">Have you Visited? Check the box!</label>
    <input type="checkbox" name="visited" value="true"class="form-control" />
    <label for="true">
        {{/unless}}
    <label for="website">Website:</label>
    <input type="text" name="website" value="{{data.website}}" class="form-control" />

    <label for="image">Image:</label>
    <input type="text" name="image" value="{{data.image}}" class="form-control" />
  </div>
  <input type="submit" class="btn btn-primary" />
  {{#if data.visited}}
  <a href="/visited" class="btn btn-secondary">Cancel</a>
  {{/if}}
  {{#unless data.visited}}
    <a href="/wishlist" class="btn btn-secondary">Cancel</a>
    {{/unless}}


</form>

