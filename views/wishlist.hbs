<header class="d-flex justify-content-between align-items-center">
  <h1>Wishlist Places I Want to Try!!</h1>
</header>

<div class="row">
    {{#each wishlist}}
        <div class="d-flex flex-column col-4 card" >
            <h5 class="card-title">{{this.name}}</h5>
            <div class="card-body d-flex flex-column justify-content-between">
                <img alt='restaurant image' class="card-img"  src="{{this.image}}" alt="Card image cap">
                <div>
                        <a href="/edit/{{this.id}}" class="btn btn-primary">Edit</a>
                        <a href="/details/{{this.id}}" class="btn btn-primary">Details</a>
                        
                       <form action="/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                </div>
            </div>
            <div class="d-flex" >
            </div>
        </div>
    {{/each}}
</div>